<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title%>
        </title>
        
        <!-- links for noty flash messages -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <!-- Jquery cdn -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" ></script>

        <link type="text/css" rel="stylesheet" href="/css/layout.css">

        <%- style %>
    </head>

    <body>
        <header>
            <div class="header-container">
                <h1>Codiel</h1>
                
                    <ul><!-- addding the links -->
                        <% if(locals.user){ %>
                            <li>
                                <a href="/users/profile/<%= user.id %>"> <%= user.name %> </a>
                            </li>

                            <li>
                                <a href="/users/sign-out"> Sign Out</a>
                            </li>

                        <% }else{ %>
                            <li>
                                <a href="/users/sign-in"> Sign In</a>
                            </li>
                            <li>
                                <a href="/users/sign-up"> Sign Up</a>
                            </li>
                        <% } %>    
                    </ul>
                
            </div>
        </header>

        <!-- Adding the flash message here above main temorarily -->
        <!-- <% if(flash.success && flash.success.length > 0) { %>
            <h5>
                <%= flash.success%>
            </h5>
        <% } %> -->

        <main>
            <%- body %>
        </main>
        

        <footer>
            <div class="footer-container">

                <h2>&#169; Created by Saurav</h2>
                <ul><!-- addding the links -->
                    <li>
                        <a href="/"> Home </a>
                    </li>

                    <li>
                        <a href="/users/profile"> Profile</a>
                    </li>  
                </ul>

            </div>
        </footer>

        <%- script %>
        <script>
            // show flash message using noty
            <% if(flash.success && flash.success.length > 0){ %>

                // for success message
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.success%>',
                    type: 'success',
                    layout: 'topCenter',
                    timeout: 1500
                }).show();
                
            <% } %>  
            
            <% if(flash.error && flash.error.length > 0){ %>

                // for error message
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.error%>',
                    type: 'error',
                    layout: 'topCenter',
                    timeout: 1500
                }).show();

            <% } %>
        </script>
    </body>
</html>